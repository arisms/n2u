<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="4dp"
    android:paddingTop="4dp"
    android:id="@+id/connections_grid_item_layout"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/connections_grid_item_innerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/usernameTV"
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/N2U_black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/lastMetTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:gravity="left|bottom"
            android:textSize="12sp"
            android:textColor="@color/N2U_black"
            android:paddingLeft="6dp"
            android:paddingBottom="2dp"
            />

        <RelativeLayout
            android:id="@+id/avatarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/usernameTV"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/avatarIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/avatar01"
                android:layout_centerInParent="true"
                android:padding="0dp"
                />

            <ImageView
                android:id="@+id/borderIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/avatar_border"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:padding="0dp"
                />

            <ImageView
                android:id="@+id/inProximityIV"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                />

            <ImageView
                android:id="@+id/updatedIV"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/new_message"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/whispersTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/whispers"
            android:textColor="@color/N2U_black"
            android:gravity="center"
            android:padding="4dp"
            />

    </RelativeLayout>

</LinearLayout>