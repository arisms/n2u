<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/titleTV"
        android:text="Share a whisper!"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scaleType="center"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@color/N2U_orange"
        android:contentDescription="@string/app_name"
        />


    <Spinner
        android:id="@+id/questionSP"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:focusable="true"
        android:padding="2dp"
        android:layout_below="@+id/titleTV"
        />

    <EditText
        android:id="@+id/answerET"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:hint="...type anything you want!"
        android:textColor="@color/N2U_black"
        android:textColorHint="@color/N2U_blue2"
        android:layout_below="@+id/questionSP"
        />

</RelativeLayout>